<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.myapplication.HomeFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_home">

    </fragment>
    <fragment
        android:id="@+id/DetailFragment"
        android:name="com.example.myapplication.DetailFragment"
        android:label="detail"
        tools:layout="@layout/fragment_detail">

    </fragment>
    <fragment
        android:id="@+id/webFragment"
        android:name="com.example.myapplication.WebFragment"
        android:label="fragment_web"
        tools:layout="@layout/fragment_web">
    </fragment>
    <action
        android:id="@+id/action_global_webFragment"
        app:destination="@id/webFragment"
        app:popUpTo="@id/HomeFragment">
        <argument
            android:name="url"
            app:argType="string" />
    </action>

    <action android:id="@+id/action_global_DetailFragment"
        app:destination="@id/DetailFragment"
        app:popUpTo="@id/HomeFragment">
        <argument
            android:name="attraction"
            app:argType="com.example.myapplication.AttractionData" />
    </action>
</navigation>